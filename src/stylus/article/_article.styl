main 
	>section
		/*padding: 50px*/
		>.content
			position: relative
			background-color: paper-color
			_shadow(1)
			
			>article
				@import "_contacts"
				padding: 50px
				color: ink-color
				overflow-x: auto
				max-width: 768px
				margin: 0px auto
				
				>p:first-of-type
					margin-bottom: 2em
					font-size: 1.4em
					line-height: 1.3em
					text-align: center
					// &::first-letter
					// 	font-size: 2.5em
					// 	float: left
					// 	padding: 10px 20px;
					// 	height: 64px;
					// 	margin-right: 10px;
					// 	line-height: 1em
					// 	border: 4px solid orange
					// 	text-transform: uppercase;
					&:after
						display:block
						border-bottom: 1px solid lighten(tertiary-color, 20)
						content: ''
						width: 50%
						margin: 20px auto
						
				p
					@extends .font-article
					font-size: 1.2em
					line-height: 1.4em
					margin-bottom: 2em
					text-align: justify
				h1
					font-size: 1.5em
					margin-bottom: 0.3em;
					text-align: center
					text-transform: uppercase
					font-weight: bold
					color: lighten(ink-color, 10)
				h2
					font-variant: small-caps
					border-bottom: 1px dotted
					margin-bottom: 1em
					a.anchor
						visibility: hidden
						width:0px
						padding-top: layout_header-height
						margin-top: -layout_header-height
						margin-left: -45px;
						background:none
						border:none
						span
							padding: 10px
							width:100px
							&:after
								width: 0px
								content: 'Link'
					&:hover
						a.anchor
							visibility: visible
							
				blockquote
					border-left: 5px solid secondary-color
					// color: #FFF
					// background-color: lighten(tertiary-color, 10)
					margin: 0 0 20px 0
					padding: 10px 40px
					p
						// @extends .font-main
						// font-weight: lighter
						margin-bottom: 0px
						font-style: italic
				a
					text-decoration: none
					color: ink-color
					border-bottom: 1px dotted ink-color
					&:hover
						background-color: link-bg-color
						border: none

				.article--share
					position:absolute
					top: 10px
					right: 10px
					color: lighten(ink-color, 50)
					font-weight: lighter
					&:hover
						color: lighten(ink-color, 20)
						cursor: pointer


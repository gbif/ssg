.Search__noInput, .Search__noResults, .Search__results {
	display none;
}
&.Search--noInput .Search__noInput, &.Search--noResults .Search__noResults {
	display block
}

.Search--showResults .Search__results {
	display flex
	flex-wrap wrap
	>a{
		padding vr-block(1)
		float left
		display block;
		flex 1 1 auto
		width 350px
		min-width 250px
		background tomato
		margin vr-block(1)
	}
}
.Search--message {
	text-align center
	margin vr-block(2)
}

.Search__content {
	padding 0 vr-block(1)
}
.Search__results {
	display none
}
.Search--showResults .Search__results {
	display flex
	flex-wrap wrap
	>a{
		float left
		display block;
		flex 1 1 auto
		width 350px
		min-width 250px
		background $search_result_bg
		margin vr-block(0.5)
		text-decoration none
		position relative
		>* {
			padding 0 vr-block(1)
			margin 0
		}
		h2 {
			padding vr-block(0.5) vr-block(1)
			color white
			background #aaa
		}
		p {
			padding-top vr-block(0.5) vr-block(1)
		}
		span {
			position absolute
			right 0
			top vr-block(0.5)
			font-size 80%
			text-transform uppercase
		}
	}
}
.Search.rtl {
	direction rtl
}
actionIcon(){
	display inline-block
	padding vr-block(1.5) vr-block(1) vr-block(0.25) vr-block(1)
	relative()
	height vr-block(2.75)
	font-size (100 /$major-third) %
	line-height vr-block(1)
	&:before {
		display block
		width 100%
		text-align center
		absolute(top left)
		set-type(2)
		line-height vr-block(0)
		margin-top vr-block(1)
	}
}
a.actionIcon {
	actionIcon()
}







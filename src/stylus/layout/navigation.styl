			left 0%
		}
	}
}

+isAbove($laptop) {
	.isOwnMenu {
		> ul {
			top $navbar_height
			right -300px
			transition: right 500ms ease;
			position absolute
			background pink
			width 300px
			height "calc(100vh - %s)" % $navbar_height
			> a {
				background #333
				display block //visual
				&:before {
					content 'back '
				}
			}
		}
		&.isActive > ul {
			right 0px
		}
	}
}



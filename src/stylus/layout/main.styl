.page-wrapper * {
	&::-webkit-scrollbar
	{
		width: 8px;  /* for vertical scrollbars */
		height: 8px; /* for horizontal scrollbars */
	}

	&::-webkit-scrollbar-track {
	    // -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	    // border-radius: 10px;
	    background: rgba(0,0,0,0)
	}

	&::-webkit-scrollbar-thumb {
	    // border-radius: 10px;
	    background: rgba(0,0,0,0.3)
	    // -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
	}
}

//SIMILUATE IE11 SCROLLBARS
.XXXpage-wrapper * {
	&::-webkit-scrollbar
	{
		width: 18px;  /* for vertical scrollbars */
		height: 18px; /* for horizontal scrollbars */
	}

	&::-webkit-scrollbar-track {
		// -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
		// border-radius: 10px;
		background: rgba(220,220,220,1)
	}

	&::-webkit-scrollbar-thumb {
		// border-radius: 10px;
		background: rgba(180,180,180,1)
		// -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
	}
}

//Safari hack to prevent flicker. At mobile breakpoint it removes scrollbar and then thinks it is larger, leading to the laptop view. Where there is a scrollbar that makes the window smaller etc.
+isBetween( ($laptop - 15px), $laptop) {
	html {
		overflow-y scroll
	}
}

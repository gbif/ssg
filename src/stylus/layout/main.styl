.overlay {
	background black
	opacity 0.2
	height 100%
	width 100%
	position absolute
	top 0
	display none
	&.isActive {
		display block
	}
}

//Safari hack to prevent flicker. At mobile breakpoint it removes scrollbar and then thinks it is larger, leading to the laptop view. Where there is a scrollbar that makes the window smaller etc.
+isBetween( ($laptop - 16px), $laptop) {
	html {
		overflow-y scroll
	}
}

.Site__contentArea__main {
	display flex
	flex-direction column
	article {
		flex 1 0 auto
	}
	footer {
		flex 0 0 auto
	}

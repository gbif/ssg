brand-background-color = color-dark
.brand
	background brand-background-color
	text-align center
	overflow hidden
	padding 20px
	padding-left 0px
	a
		margin auto
	div
		/*color _inkColor(brand-background-color)*/
		background siteLogo
		background-size contain
		background-repeat no-repeat
		height 3em
		width 4em
		background-position bottom
		display inline-block
	h1
		border-left: 3px solid paper-color
		line-height 1em
		padding-left 5px
		margin-left 5px
		color _inkColor(brand-background-color)
		font-weight bold
		display inline-block
		font-size 3em
		vertical-align bottom

@media (min-width tablet)
	.brand
		padding 50px 20px

@media (min-width laptop)
	.brand
		padding 50px 20px

if (horizontalLayout)
	@media (min-width laptop)
		.brand
			background-color horizontalBgColor
			padding 0
			display inline
			a
				padding 15px 20px
				background siteLogo
				background-size contain
				background-repeat no-repeat
				background-position center
			div
				display:none
			h1
				display none

.ie8
	.brand
		div
			display none
		h1
			border-width 0px
			padding-left 0px
			margin-left 0px
if (horizontalLayout)
	@media (min-width laptop)
		.ie8 .brand
			a
				display none
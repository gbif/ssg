.languageSelector
	ul
		border-bottom: 1px solid darken(paper-color, 5)
		max-height: 0px
		overflow: hidden
		transition: max-height 0.3s ease
	&.isExpanded>ul
		max-height: 250px
	a
		display:block
	>a
		padding: 15px 20px
		&:hover
			color: darken(ink-color, 20)
			background-color: darken(paper-color, 5)
	li>a
		padding: 5px 20px
		color: lighten(ink-color, 30)
		&:hover
			color: ink-color



if (horizontalLayout)
	@media (min-width: laptop)
		.languageSelector
			display:inline
			position relative
			ul
				border-bottom: none
				max-height: 250px
				display none
				position absolute
				left -0.8em
				top 1.5em
				background paper-color
				_shadow(1,2)
			&.isExpanded>ul
				border: 1px solid darken(paper-color, 5)
				display: block
				overflow visible
				&:before
					content: "";
					position: absolute;
					width: 0;
					height: 0;
					left: 50%;
					margin-left: -12px;
					top: -12px;
					border: 6px solid transparent;
					border-bottom: 6px solid paper-color;
			>a
				display:inline-block
				padding: 15px 20px
				&:hover
					color: darken(horizontalBgColor, 30)
					background-color: inherit
			li
				display: inline
				>a
					display: inline-block
					padding: 5px 20px
					color: darken(horizontalBgColor, 30)
					&:hover
						color: ink-color
block-color-1 = paper-color
block-color-2 = darken(paper-color, 3)
main
	>section
		/*padding: 50px*/
		>.content
			position: relative
			background-color: paper-color
			/*_shadow(1)*/
			>article
				@import "_contacts"
				color: ink-color
				overflow-x: hidden
				margin: 0px auto
				>section
					&.block-first
						background-color: primary-color
						>div
							max-width: none
					background-color: block-color-1
					background-size: cover
					background-position: center
					&:nth-of-type(1) ~ *
						background: block-color-1
					&:nth-of-type(2) ~ *
						background: block-color-2
					&:nth-of-type(3) ~ *
						background: block-color-1
					&:nth-of-type(4) ~ *
						background: block-color-2
					&:last-of-type
						padding-bottom: 50px
					&:first-of-type
						padding: 0
					&.hasImage>div>h1
						color: color-dark
						padding: 3em 1em
					>div
						max-width: tablet
						margin: auto
						padding 10px 10px 20px 10px
						>p
							/*@extends .font-article*/
							font-size: 1.0em
							text-align: justify
							margin-top: 1em
							margin-bottom: 1em
						>h1
							margin: 0
							padding: 2em 1em
							font-size: 1.8em
							text-align: center
							text-transform: uppercase
							font-weight: bold
							/*color: lighten(ink-color, 10)*/
							/*background: url('https://images.unsplash.com/photo-1440470177828-6381dc5074ba?fit=crop&fm=jpg&h=1100&ixlib=rb-0.3.5&q=80&w=1450')//orange*/
							/*background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5),  rgba(255, 255, 255, 0.5)), url(https://images.unsplash.com/photo-1440470177828-6381dc5074ba?fit=crop&fm=jpg&h=1100&ixlib=rb-0.3.5&q=80&w=1450)*/
							/*background: linear-gradient(to bottom, rgba(255, 255, 255, 0.2),  rgba(255, 255, 255, 0.2)), url(https://images.unsplash.com/photo-1432057322224-8916b9ed202a?fit=crop&fm=jpg&h=1100&ixlib=rb-0.3.5&q=80&w=1450)*/
							/*background-size: cover*/
							/*background-color: primary-color*/
							color: _inkColor(primary-color)
							width: 100%
						>h2
							font-size: 1.4em
							margin-bottom: 2em
							margin-top: 2em
							text-align: center
						a.anchor
							display none
							padding-left 1em
							/*padding-top: layout_header-height*/
							/*margin-top: -layout_header-height*/
							background:none
							border:none
						>h3, >h4
							&:hover
								a.anchor
									display inline
									background:none
						>h3
							font-variant: small-caps
							border-bottom: 1px dotted
							margin-bottom: 1em
							margin-top: 2em
						>h4
							font-weight bold
						>blockquote
							border-left: 5px solid tertiary-color
							margin 30px 0
							padding: 10px 40px
							p
								margin-bottom: 0px
								font-style: italic
							img
								max-width 100px
								display block
								margin 0
						a
							text-decoration: none
							color: ink-color
							border-bottom: 1px dotted ink-color
							&:hover
								background-color: link-bg-color
								border: none
						img
							display: block
							margin auto
						.article--share
							position:absolute
							top: 10px
							right: 10px
							color: lighten(ink-color, 50)
							font-weight: lighter
							&:hover
								color: lighten(ink-color, 20)
								cursor: pointer

@media (min-width tablet)
	main
		>section
			>.content
				>article
					>section
						>div
							padding: 20 50px
							h1
								font-size: 3em
								padding: 1em 1em


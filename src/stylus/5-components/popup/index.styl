popupBg = darken(paper-color, 10)
popupColor = color-dark

.popup
	position fixed
	margin 0 10px
	bottom -500px
	left 0
	right 0
	background paper-color
	padding 10px 10px 20px 10px
	transition bottom 0.3s ease
	box-shadow: 1px -1px 5px 2px rgba(0, 0, 0, 0.15);
	border borderWidth solid accent-color
	border-bottom-width 0px
	max-width 500px
	p
		font-size 0.9em
		padding: 5px
	a
		color popupColor
		text-decoration none
		border: none
		background-color none
	&.isVisible
		bottom 0px
	.popup-close
		position absolute
		top 0
		right 0
		padding 10px
	.popup-languages
		ul
			padding 0
			display flex
			flex-wrap wrap
		li
			flex 0 0 auto
			display inline-block
			margin: 10px 5px
			a
				background: popupBg
				padding: 7px 12px
				color: popupColor
				border-left borderWidth solid popupBg
				&:hover
					border-left-color primary-color

			
	
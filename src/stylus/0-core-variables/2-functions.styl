/* FUNCTIONS */
_inkColor(bg)
	if dark(bg)
		color-bright
	else
		color-dark


/* MIXINS */
_shadow(h, v=0)
	if h>0
		box-shadow: 1px*v 1px*h 0.5px*h 1px rgba(0, 0, 0, 0.15);
	else
		box-shadow: inset 1px*h 1px*v -1px*h 1px rgba(0, 0, 0, 0.15);


/* ABSTRACT EXTENDS */
.font-main
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif

.font-article
	font-family: 'Times New Roman', Times, serif


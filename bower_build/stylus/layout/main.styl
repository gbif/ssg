
html, body, .page-wrapper {
	height 100vh
	width 100%
	overflow-x hidden
	background $content_bg
}
.siteCanvas {
	height 100%
	width 100%
}
.SiteNav, .mobileHeader, .Site__drawer, .SiteHeader {
	ul,ol {
		margin 0
		list-style none
		padding 0
	}
	a {
		text-decoration none
	}
}


setScrollbars() {
	.page-wrapper * {
		&::-webkit-scrollbar {
			width: 8px; /* for vertical scrollbars */
			height: 8px; /* for horizontal scrollbars */
		}

		&::-webkit-scrollbar-track {
			// -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
			// border-radius: 10px;
			background: rgba(0, 0, 0, 0)
		}

		&::-webkit-scrollbar-thumb {
			// border-radius: 10px;
			background: rgba(0, 0, 0, 0.3)
			// -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
		}
	}
}

.overlay {
	background black
	opacity 0.2
	height 100%
	width 100%
	position absolute
	top 0
	display none
	&.isActive {
		display block
	}
}


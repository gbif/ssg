//SEARCH



//layout
.Search {
	position absolute
	top $navbar_height
	z-index 50
	width 100%
	height "calc(100% - %s)" % $navbar_height
	display none
	background $searchBg
	overflow hidden
	&.isActive {
		display block
		+ .main {
			visibility hidden
		}
	}
	.Search__content {
		overflow hidden
		height 100%
		-webkit-overflow-scrolling touch
		overflow-y: auto;
	}
}


//content
.Search .Search__content{
	>form {
		width 90%
		margin vr-block(1) auto
		position relative
		input {
			width 100%
			height vr-block(2)
			border none
			box-sizing border-box
			padding-right vr-block(3)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			background none
			color $searchInputColor
			font-size vr-block(1)
			&:focus {
				outline none
			}
		}
		&:after {
				content ' '
				display block
				width 100%
				border-bottom 1px solid $formBottomBorderColor
			}
		button {
			outline none
			width vr-block(1)
			height 100%
			background none
			position absolute
			font-size vr-block(1.5)
			right 0
			top 0%
			float right
			border none
			span {
				position absolute
				right -9999px
			}
		}
	}
}

+isAbove($laptop) {
	.Search {
		.Search__content {
			form {
				width 60%
			}
		}
	}
}